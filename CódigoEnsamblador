#INCLUDE <P16F84A.INC>
__CONFIG _CP_OFF & _WDT_OFF & _PWRTE_ON & _XT_OSC

	ORG 000H

	      BSF STATUS, RP0
  	    MOVLW 0FH
	      MOVWF TRISA
	      CLRF TRISB
	      BCF STATUS, RP0

	      CLRF PORTB

ARKEUS: MOVF PORTA,W
	      SUBLW 19H
	      BTFSS STATUS,C	;SI C ES 0 ENTONCES EL NUMERO ES MAYOR A 25, POR LO CUAL DEBE MANDAR GUION
	      GOTO GLIGAR
        GOTO LUGIA	;SI C ES 1 ENTONCES DEBE ENTRAR AQUI, MANDANDO LOS VALORES PARA LA FRASE

GLIGAR:	MOVLW 40H
	      MOVWF PORTB
	      GOTO ARKEUS

LUGIA:	MOVF PORTA,W
	      CALL DITTO
	      MOVWF PORTB
	      GOTO ARKEUS

DITTO:  ADDWF PCL,1	;ESTA TABLA ES PARA MOSTRAR LA FRASE
        RETLW 79H	;E
	      RETLW 38H	;L
	      RETLW 08H	;_
	      RETLW 39H	;C
	      RETLW 3FH	;O
	      RETLW 39H	;C
	      RETLW 3FH	;O
	      RETLW 08H	;_
	      RETLW 79H	;E
	      RETLW 6DH	;S
	      RETLW 08H	;_
      	RETLW 79H	;E
      	RETLW 38H	;L
      	RETLW 08H	;_
      	RETLW 39H	;C
      	RETLW 3EH	;U
      	RETLW 38H	;L
      	RETLW 73H	;P
      	RETLW 77H	;A
	      RETLW 7CH	;b
      	RETLW 38H	;L
	      RETLW 79h	;E
      	RETLW 08H	;_
      	RETLW 5BH	;2
      	RETLW 6DH	;5
	END
